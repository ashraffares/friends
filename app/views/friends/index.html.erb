<%if user_signed_in?%>
<h1>Friends</h1>

<table class='table  table-striped table-bordered'>
  <thead class='table-dark'>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
      <% if friend.user.id == current_user.id%>
      <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>
        <td><%= link_to 'delete', friend, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-outline-danger btn-sm' %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path,class:'btn btn-primary text-white' %>
<%else%>
  <h3>Welcome to friends list app</h3>
  <p>sign in to make your list</p>
<%end%>
