<%if user_signed_in?%>
<h1>Friends</h1>

<table class='table'>
  <thead class='table-dark'>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class='table-striped table-hover'>
    <% @friends.each do |friend| %>
      <tr>
      <% if friend.user.id == current_user.id%>
        <td><%= friend.first_name %>
        <%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>
        <td><%= link_to 'Show', friend %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path,class:'btn btn-primary text-white' %>
<%else%>
  <h3>Welcome to friends list app</h3>
  <p>sign in to make your list</p>
<%end%>
